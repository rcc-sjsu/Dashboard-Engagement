{
  "name": "dashboard-monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "server:install": "cd apps/server && bun run install",
    "server:install:windows": "cd apps/server && bun run windows:install"
  },
  "dependencies": {
    "@repo/env": "workspace:*",
    "dotenv": "catalog:",
    "html-to-image": "^1.11.13",
    "react-dropzone": "^14.3.8",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.2.17"
}
