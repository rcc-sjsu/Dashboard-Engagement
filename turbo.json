{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "platform": {
    "vercel": {
      "env": [
        "SERVER_URL",
        "SUPABASE_SERVICE_ROLE_KEY",
        "SERVER_INTERNAL_API_SECRET"
      ]
    }
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
